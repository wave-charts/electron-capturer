{
  "compilerOptions": {
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "importHelpers": true,
    "noUnusedParameters": false,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "paths": {}
  },
  "exclude": [
    "node_modules",
    "dist",
    "examples"
  ]
}